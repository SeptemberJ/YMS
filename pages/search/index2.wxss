.search_block{
    width: 100%;
    /*height: 410rpx;*/
    height: 370rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    position: relative;
    z-index: 9999;
    border-bottom: 30rpx solid #fff;
    /*border-image: url(/image/strap.png) 30 30 round;*/
    border-image: url('https://wxmms.swissems.cn/emsxm/page/images/strap.png') 30 30 round;
}
.search_item{
    width: 98%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items:center;
    justify-content: center;
    /*border: 1rpx solid #e6e6e6;*/
    margin-top: 20rpx;
    padding: 0 5rpx;
}
.search_item text{
    /*width: 300rpx;*/
    width: auto;
    height: 100%;
    display: flex;
    /*line-height: 100rpx;*/
    align-items: center;
    justify-content:center;
}
.search_item input{
    width: 60rpx;
    height: calc(100% -20rpx);
    margin-right: 10rpx;
    display: flex;
    align-content: center;
    justify-content: center;
    padding: 0rpx 10rpx;
    border: 2rpx solid #ccc;
    text-align: center;
}
.clearInput{
    width: 50rpx;
    height: 50rpx;
    display: flex;
}
.clearInput image{
    width: 50rpx;
    height: 50rpx;
    display: block;
}
.search_icon{
    width: 95%;
    height: 80rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #e6e6e6;
    background: #3b5999;
    border-radius: 50rpx;
    /*padding-top:8rpx;*/
}
.search_icon text{
    width: 100rpx;
    height: 80rpx;
    display: block;
    text-align: center;
    font-size: 38rpx;
    color: #fff;
    font-weight: bold;
    line-height: 80rpx;
}
.searchIcon{
    width: 50rpx;
    height: 50rpx;
    display: flex;
}
.search_icon image{
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    margin: 0rpx auto;
}

