.contain{
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  
}
.topLine{
  margin-bottom: 10px;
}
.topLine image{
  width: 200rpx;
  height: 50rpx;
}
.topInfo{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
/*technologyReport*/
.technologyReport{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.redLine{
  width: 100%;
  height: 50rpx;
  background: #ff0000;
  color: #fff;
  text-align: center;
  font-size: 29rxp;
  margin-top: 20rpx;
}
.grayLine{
  width: 100%;
  height: 20rpx;
  background: #333;
  margin-top: 10rpx;
}
/*formInfo*/
.formInfo{
  width: 100%;
  height: auto;
}
.formItem{
  width: calc(100% - 2px);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border: 1px solid #000;
  margin: 10rpx 0;
}
.content{
  width: calc(100% - 250rpx);
  border-left: 1px solid #000;
}
.columTit{
  width: 250rpx;
}
/*midLine*/
.midLine{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  margin: 20rpx auto;
}
.Fbold{
  font-weight: bold;
  margin-bottom: 10rpx;
}
/*formBlock*/
.formBlock{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px solid #000;
}
.formBlock_item{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.formBlock_item:not(:last-of-type){
  border-bottom: 1px solid #000;
}
.formBlock_item text{
  /*border: 1px solid #000;*/
  
}
